<% content_for :title, "#{@fragment.display_title} &mdash; Major revisions".html_safe %>
<% if @fragment.fragment_versions_with_major_revisions.empty? -%>
	<%= content_tag( 'p', 'Sorry, there are no major revisions to show.' ) %>
<% else -%>
	<table>
		<%= render :partial => 'fragment_version/fragment_version_from_fragment', :collection => @fragment.fragment_versions_with_major_revisions %>
	</table>
<% end -%>