<% content_for :title, "#{@order.display_title} &mdash; Major revisions".html_safe %>
<% if @order.order_versions_with_major_revisions -%>
	<table>
		<%= render :partial => 'order_version/order_version_from_order', :collection => @order.order_versions_with_major_revisions %>
	</table>
<% else -%>
	<%= content_tag( 'p', 'Sorry, there are no major revisions to show.' ) %>
<% end -%>